cflags = -std=c++14 -m64 -Wall
links = -lSDL2main -lSDL2 -lSDL2_image

rule debug
    command = g++ -c src/*.cpp $cflags -g -Iinclude && g++ *.o -o ./bin/debug/main $links

rule run
    command = g++ -c src/*.cpp $cflags -g -Iinclude && g++ *.o -o ./bin/debug/main $links && ./bin/debug/main

rule release
    command = g++ -c src/*.cpp $cflags -O3 -Iinclude && g++ *.o -o ./bin/release/main -s $links

build debug: debug

build run: run

build release: release
